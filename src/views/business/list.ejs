<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Empresas</h2>
        <a href="/business/create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Crear nueva empresa
        </a>
    </div>

    <% if (businesses.length> 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Logo</th>
                        <th>Sitio Web</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% businesses.forEach(b=> { %>
                        <tr>
                            <td>
                                <%= b.name %>
                            </td>

                            <td>
                                <% if (b.logo) { %>
                                    <img src="<%= b.logo %>" alt="logo" width="50" height="50"
                                        style="object-fit: contain;">
                                    <% } else { %>
                                        <span class="text-muted">Sin logo</span>
                                        <% } %>
                            </td>

                            <td>
                                <% if (b.website) { %>
                                    <a href="<%= b.website %>" target="_blank">
                                        <%= b.website %>
                                    </a>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                        <% } %>
                            </td>

                            <td>
                                <a href="/business/edit/<%= b._id %>" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>

                                <form action="/business/delete/<%= b._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-building" style="font-size: 4rem; color: #6c757d;"></i>
                <h4 class="mt-3 text-muted">No tienes empresas registradas todav√≠a</h4>
                <p class="text-muted">Comienza creando tu primera empresa para asociarla a canales u otras funciones.
                </p>
                <a href="/business/create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-lg"></i> Crear Empresa
                </a>
            </div>
            <% } %>
</div>