<div class="container-fluid">
    <div class="card shadow border-0 rounded-4 p-4">

        <form action="<%= business ? ('/business/edit/' + business._id) : '/business/create' %>" method="POST">
            <div class="mb-3">
                <label class="form-label">Nombre *</label>
                <input type="text" name="name" class="form-control" required
                    value="<%= business ? business.name : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Logo (URL)</label>
                <input type="text" name="logo" class="form-control"
                    value="<%= business ? (business.logo || '') : '' %>">
            </div>

            <% if (business && business.logo) { %>
                <div class="mb-3 text-center">
                    <img src="<%= business.logo %>" alt="logo" width="100" height="100" style="object-fit: contain;"
                        class="border p-2 rounded">
                </div>
                <% } %>

                    <div class="mb-3">
                        <label class="form-label">Sitio Web</label>
                        <input type="text" name="website" class="form-control"
                            value="<%= business ? (business.website || '') : '' %>">
                    </div>

                    <div class="d-flex justify-content-end">
                        <a href="/business" class="btn btn-secondary me-2">Cancelar</a>
                        <button class="btn btn-primary">
                            <i class="bi bi-save"></i>
                            <%= business ? "Actualizar" : "Guardar" %>
                        </button>
                    </div>
        </form>
    </div>
</div>