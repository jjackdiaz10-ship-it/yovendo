<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"></h2>
        <a href="/channels/create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Crear nuevo canal
        </a>
    </div>

    <% if (channels.length> 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Empresas</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% channels.forEach(ch=> { %>
                        <tr>
                            <td>
                                <%= ch.name %>
                            </td>
                            <td>
                                <%= ch.type %>
                            </td>
                            <td>
                                <% ch.businesses.forEach((b, i)=> { %>
                                    <%= b.name %>
                                        <%= i < ch.businesses.length - 1 ? ", " : "" %>
                                            <% }) %>
                            </td>
                            <td>
                                <% if (ch.active) { %>
                                    <span class="badge bg-success">Sí</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">No</span>
                                        <% } %>
                            </td>
                            <td>
                                <a href="/channels/<%= ch._id %>/edit" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <form action="/channels/<%= ch._id %>/delete" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-plug" style="font-size: 4rem; color: #6c757d;"></i>
                <h4 class="mt-3 text-muted">No tienes canales creados todavía</h4>
                <p class="text-muted">Crea tu primer canal y conecta tus empresas con tus bots.</p>
                <a href="/channels/create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-lg"></i> Crear Canal
                </a>
            </div>
            <% } %>
</div>