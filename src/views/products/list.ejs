<div class="container mt-4">
    <h1>Productos</h1>

    <div class="text-end mb-3">
        <a href="/products/create" class="btn btn-primary">+ Crear Producto</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>SKU</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Negocio</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            <% if (products.length===0) { %>
                <tr>
                    <td colspan="6" class="text-center">No hay productos registrados</td>
                </tr>
                <% } %>

                    <% products.forEach(product=> { %>
                        <tr>
                            <td>
                                <%= product.name %>
                            </td>
                            <td>
                                <%= product.sku %>
                            </td>
                            <td>$<%= product.price %>
                            </td>
                            <td>
                                <%= product.stock %>
                            </td>
                            <td>
                                <%= product.business ? product.business.name : '—' %>
                            </td>

                            <td>
                                <a href="/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">
                                    Editar
                                </a>

                                <form action="/products/delete/<%= product._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('¿Eliminar este producto?')">
                                        Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
        </tbody>
    </table>
</div>